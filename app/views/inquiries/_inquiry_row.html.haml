%li.inquiry
  .container
    .col-sm-3
      .amount-wrap
        %h1
          = inquiry.format_price
          %small
            \/
            %span.badge.score{class: "c-#{inquiry.score}", 'data-toggle'=>"tooltip", 'data-placement'=>"top", 'title'=>"Tooltip on top"}=inquiry.score

    .col-sm-6.reason-col
      .col-reason-wrap
        .circle
          =image_tag inquiry.user.gravatar, width: 30
        .reason
          = inquiry.reason
          .public_name
            = "- #{inquiry.user.public_name}"

    .col-sm-2.inline-tools
      .inline-tools-wrap
        .btn-group
          =link_to 'Details & Invest', root_path, class: %w{btn btn-default btn-sm more-details}
          - if signed_in? and current_user.id == inquiry.user_id
            = link_to 'Edit', edit_inquiry_path(inquiry), class: %w{btn btn-default btn-sm }

    .col-sm-1.expires_at
      =distance_of_time_in_words_to_now inquiry.expires_at

